    Column() {
      Text(title)
        .fontColor('#0D9FFB')
        .fontSize(18)
        .fontWeight(FontWeight.Bold)
        .margin({ bottom: 16, top: 24 })
      ForEach(items, (item: Article, idx: number) => {
        Row() {
          this.ArticleCard(item, columnType)
        }
      }, (item: Article) => item.id)
    }
    .width('100%')
    .margin({ bottom: 40 })
  }
} 